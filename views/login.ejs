<%- include partials/header.ejs %>

<link rel="stylesheet" href="/css/login-style.css">

<%- include partials/navbar.ejs %>

<div class="father-container">
    <div class="login-container">
        <div class="login-title-container">
            <div class="icon">
                <img width="100" src="/media/icons/baseline-account_circle-24px.svg">
            </div>
            <p class="login-title">¡Bienvenido!</p>
        </div>
        <form action="/auth/login" class="form" method="POST">
            <input type="username" name="username" placeholder="Username:">
            <input type="password" name="password" placeholder="Contraseña:">
            <input type="submit" class="submit-button" name="submit-newuser" value="Continuar">
        </form>

        <% if(message) {%>
            <h4><%= message %></h4>
        <% } %>
    </div>
</div>

<%- include partials/footer.ejs %>
