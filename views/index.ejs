<% if(isLoggedIn) { %>
    <%- include partials/navbar-loged.ejs %>
<% } else { %>
    <%- include partials/navbar.ejs %>
<% } %>



<div class="base-container">

    <%- include partials/sidebar.ejs %>

    <div class="content">
        <p class="title-content">Series:</p>
        <div class="movies-container">
            <a class="movies-move-icon"><img src="media/icons/Recurso%203.png"></a>
            <% showData.forEach(show =>{ %>
                <a href="/media/show/<%= show.id %>" class="movie-item">
                    <img src="<%= show.poster %>">
                    <i class="far fa-heart icon-fav"></i>

                    <!--<i class="fas fa-heart icon-fav"></i>-->

                    <div class="movie-item-text-container">
                        <p class="movie-item-text"><%= show.title %><br> <%= show.release_date.getFullYear() %></p>
                    </div>
                </a>
            <% }) %>
            <a class="movies-move-icon"><img src="media/icons/Recurso%202.png"></a>
        </div>


        <p class="title-content">Tendencias:</p>
        <div class="movies-container">
            <a class="movies-move-icon"><img src="media/icons/Recurso%203.png"></a>
            <% movieData.forEach(movie =>{ %>
                <a href="/media/movie/<%= movie.id %>" class="movie-item">
                    <img src="<%= movie.poster %>">
